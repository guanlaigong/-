<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 题目输入框 -->
        <EditText
            android:id="@+id/et_new_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入新题目"
            android:padding="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- 选项A -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_option_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_option_a"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="选项A"
                android:padding="16dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- 选项B -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_option_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_option_b"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="选项B"
                android:padding="16dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- 选项C -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_option_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_option_c"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="选项C"
                android:padding="16dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- 选项D -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_option_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_option_d"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="选项D"
                android:padding="16dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- 添加题目按钮 -->
        <Button
            android:id="@+id/btn_add_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加题目"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- 题目列表 -->
        <ListView
            android:id="@+id/lv_questions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="?android:attr/listDivider"
            android:dividerHeight="1dp"/>

        <!-- 删除所有题目按钮 -->
        <Button
            android:id="@+id/btn_delete_all_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除所有题目"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>